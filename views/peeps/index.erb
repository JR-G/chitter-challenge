<head>
  <title>Chitter</title>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&family=Roboto&display=swap" 
        rel="stylesheet"/>
  <style> 
    h1 {
      font-family: 'Noto Sans JP', sans-serif;
      font-size: 50px;
      color: white;
    }
    h3 {
      font-family: 'Noto Sans JP', sans-serif;
      color: white;
    }
    li {
      font-family: 'Roboto', sans-serif;
      color: white;
      list-style-type: none;
      outline-style: solid;
      outline-width: thin;
      margin-right: 500px;
      padding: 25px 50px;
    }
    body {
      background-color: #1DA1F2;
    }
    footer {
      color: white;
      background-color: rgb(21, 32, 43);
      text-align: center;
      padding: 10px;
      font-family: 'Noto Sans JP', sans-serif;
      position: absolute;
      bottom: 0;
      width: 100%;
    }
  </style>
</head>
<body>
  <h1>Chitter</h1>
  <br>
  <% if @user %>
    <h3>Hello <%= @user.handle %></h3>
    <form action="sessions/destroy" method="post">
      <input type="submit" value="Sign out"/>
    </form>
  <% end %>
  <h3> <%= flash[:notice] %> </h3>
  <% if !@user %>
  <form action="sessions/new" method="get">
    <input type="submit" value="Sign in">
  </form>
  <% end %>
  <form action="peeps/new" method="get">
    <input type="submit" value="Make a Peep">
  </form>
  <br>
  <ul>
    <% @peeps.each do |peep| %>
      <li class="peep" id="peep-<%= peep.id %>">
        <%= peep.post %> | <%= peep.time %>
      </li>
      <br>
    <% end %>
  </ul>
  <footer>
    Chitter Challenge | JR-G | Makers 2020
  </footer>
</body>